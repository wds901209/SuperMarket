<!-- 當你的網站有多個頁面結構相似時，可以使用一個 Layout -->
<!-- 這樣可以專注於各個頁面的差異內容，而不用重複撰寫共同部分 -->

<!DOCTYPE html>
<html lang=""en>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="="width="device-width, initial-scale=1.0" />
    <title>Supermarket Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Supermarket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="categories" asp-action="index">Categories</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="pb-3">
            @RenderSection("title")
            <hr>
        </div>
        <div>
            @RenderBody()
        </div>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>

